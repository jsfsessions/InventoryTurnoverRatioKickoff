<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>smoothness</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <!-- configure a common error page for all exceptions -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/login/ops.xhtml</location>
    </error-page>
    <!-- configure security constraints -->
    <security-constraint>
        <display-name>Users-Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Inventory Turnover Ratio Home Page</web-resource-name>
            <description>All users that are login can access these pages</description>
            <url-pattern>/pages/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enable access to userRole and adminRole</description>
            <role-name>userRole</role-name>
            <role-name>adminRole</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Admin-Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Admin Home Page</web-resource-name>
            <description>This page can be accessed only by the admin</description>
            <url-pattern>/admin/itr-admin.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enable access only to adminRole</description>
            <role-name>adminRole</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>itr-realm</realm-name>
        <form-login-config>
            <form-login-page>/login/login.xhtml</form-login-page>
            <form-error-page>/login/ops.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>All Inventory Turnover Ratio users are in this role</description>
        <role-name>userRole</role-name>
    </security-role>
    <security-role>
        <description>The Inventory Turnover Ratio admin is in this role</description>
        <role-name>adminRole</role-name>
    </security-role>
</web-app>
